@{
    ViewData["Title"] = "View project authors";
}

<style>
    table {
        border-spacing: 0 15px;
        align-self: center;
    }

    th {
        background-color: lightskyblue;
        color: white;
        width: 150px;
        text-align: center;
        border: 1px solid black;
        padding: 5px;
    }

    th,
    td {
        width: 250px;
        text-align: center;
        border: 1px solid black;
        padding: 5px;
    }

    h2 {
        color: darkblue;
    }
</style>

<div class="text-center">
    <h2 class="display-4" style="text-align: left">Пользователи проекта</h2>
    <br />
    <table>
        <tr>
            <th>#</th>
            <th> Имя </th>
            <th> Фамилия </th>
            <th> Дата регистрации </th>
        </tr>
        @{
            var rowNumber = 1;
        }
        @foreach (var user in Model)
        {
            <tr>
                <td>@rowNumber</td>
                <td> @user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.JoinTime.ToShortDateString()</td>
            </tr>

            rowNumber++;
        }
    </table>
</div>
